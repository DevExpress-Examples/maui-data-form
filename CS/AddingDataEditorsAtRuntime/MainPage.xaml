<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dx="http://schemas.devexpress.com/maui"
             x:Class="AddingDataEditorsAtRuntime.MainPage">
    <Grid x:Name="grid" RowSpacing="10" Margin="10,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <dx:DataFormView x:Name="dataForm" />
        <Button Grid.Row="1" HeightRequest="50" Text="Add Editor" Clicked="Add_Editor"/>
        <Button Grid.Row="2" HeightRequest="50" Text="Remove Editor" Clicked="Remove_Editor"/>
    </Grid>
</ContentPage>
